
  <div class="container">
    <text class="title">盈峰项目管理系统</text>
    <view class="login-container">
      <view class="username-wrapper">
        <view class="username">
          <input class="username-text" placeholder="用户名/手机号" placeholder-style="color:#d2d2d2" bindinput="getUsername" value="{{value}}"/>

        </view>
        <view class="under-line"/>
      </view>
      <view class="password-wrapper">
        <view class="username">
          <input class="username-text" password="{{passwordVisible}}" placeholder="密码" placeholder-style="color:#d2d2d2" bindinput="getPassword"/>

        </view>
        <view class="under-line"/>
      </view>
      <button type="default" bindtap="submitUserMessage" class="submit" plain style="background-color:#0ba8fd;border-color:transparent">
        登录
      </button>
      <button style="background-color:transparent;border: none;" class="forget-password">忘记密码？</button>
    </view>
  </div>